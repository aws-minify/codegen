{
    "defaults": {
        "serverPort": "3000",
        "implementation": "services",        
        "extraDependancies": [
            { "package":"request", "version":"^2.87.0" },
            { "package":"dynamodb", "version":"^1.0.0" },
            { "package": "jwt-decode", "version": "^2.2.0"},
            { "package": "brakes", "version": "^2.8.0"},
            { "package": "aws-sdk", "version": "^2.635.0"}
        ]
    },
    "transformations": [
        { "input": "package.mustache", "output": "package.json" },
        { "input": "README.mustache", "output": "README.md" },
        { "input": "app.mustache", "output": "app.js" },
        { "input": "index.mustache", "output": "index.js" }
    ],
    "perGateway": [
        { "input": "api-gateway.mustache", "output": "{{apiName}}/api-gateway.yaml" },
        { "input": "openapi.mustache", "output": "specs/{{apiName}}/openapi.yaml" },
        { "input": "swagger-yaml.mustache", "output": "specs/{{apiName}}/swagger.yaml" },
        { "input": "swagger-json.mustache", "output": "specs/{{apiName}}/swagger.json" },
        { "input": "docker-compose.mustache", "output": "{{apiName}}/docker-compose.yml" },
        { "input": "api-gateway.conf.mustache", "output": "{{apiName}}/api-gateway.conf" }
    ],
    "perService": [        
        { "input": "setup.env.mustache", "output": "tests/{{apiName}}/{{serviceName}}/setup.env.js" },
        { "input": "app-lambda.mustache", "output": "{{apiName}}/{{serviceName}}/app.js" },        
        { "input": "openapi.mustache", "output": "{{apiName}}/{{serviceName}}/specs/openapi.yaml" },
        { "input": "swagger-yaml.mustache", "output": "{{apiName}}/{{serviceName}}/specs/swagger.yaml" },
        { "input": "index.mustache", "output": "{{apiName}}/{{serviceName}}/index.js" },        
        { "input": "package-lambda.mustache", "output": "{{apiName}}/{{serviceName}}/package.json" },
        { "input": "Dockerfile.mustache", "output": "{{apiName}}/{{serviceName}}/Dockerfile" },
        { "input": "docker-entrypoint.mustache", "output": "{{apiName}}/{{serviceName}}/docker-entrypoint.sh" },        
        { "input": "writer.mustache", "output": "{{apiName}}/{{serviceName}}/utils/writer.js" },
        { "input": "list-objects.mustache", "output": "{{apiName}}/{{serviceName}}/utils/list-objects.js" },
        { "input": "create-object.mustache", "output": "{{apiName}}/{{serviceName}}/utils/create-object.js" },
        { "input": "update-object.mustache", "output": "{{apiName}}/{{serviceName}}/utils/update-object.js" },
        { "input": "get-object.mustache", "output": "{{apiName}}/{{serviceName}}/utils/get-object.js" }
    ],
    "perServiceModel": [
        { "input": "service.mustache", "output": "{{apiName}}/{{serviceName}}/{{implementation}}/{{className}}.js" },                
        { "input": "test.spec.mustache", "output": "tests/{{apiName}}/{{serviceName}}/{{className}}.spec.js" }
    ],
    "perOperation": [
        { "input": "controller.mustache", "output": "{{apiName}}/{{serviceName}}/controllers/{{operationId}}.js" }
    ]
}