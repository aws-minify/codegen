{
    "defaults": {
        "serverPort": "3000",
        "implementation": "services",        
        "extraDependancies": [
            { "package":"request", "version":"^2.87.0" },
            { "package":"dynamodb", "version":"^1.0.0" },
            { "package": "jwt-decode", "version": "^2.2.0"}
        ]
    },
    "directories": [
        "tests/{{implementation}}", "specs", "controllers", "utils", "{{implementation}}"
    ],
    "transformations": [
        { "input": "app.mustache", "output": "app.js" },
        { "input": "index.mustache", "output": "index.js" },
        { "input": "index-gcf.mustache", "output": "index-gcf.js" },
        { "input": "package.mustache", "output": "package.json" },
        { "input": "README.mustache", "output": "README.md" },
        { "input": "swagger.mustache", "output": "specs/swagger.yaml" },
        { "input": "openapi.mustache", "output": "specs/openapi.yaml" },
        { "input": "Dockerfile.mustache", "output": "Dockerfile" },
        { "input": "docker-entrypoint.mustache", "output": "docker-entrypoint.sh" },
        { "input": "docker-compose.mustache", "output": "docker-compose.yml" },        
        { "input": "writer.mustache", "output": "utils/writer.js" },        
        { "input": "setup.env.mustache", "output": "tests/setup.env.js" }
    ],
    "perService": [
        { "input": "api-gateway.mustache", "output": "api-gateway.yaml" },
        { "input": "lambda.mustache", "output": "lambda.yaml" }
    ],
    "perApi": [
        { "input": "controller.mustache", "output": "controllers/{{name}}.js" },
        { "input": "service.mustache", "output": "{{implementation}}/{{name}}.js" },                
        { "input": "sample.spec.mustache", "output": "tests/{{implementation}}/{{name}}.spec.js" }
    ]
}